<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_room_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:background="@color/third_color"
    android:padding="16dp"
    android:layout_margin="4dp">


    <TextView
        android:id="@+id/tx_item_room_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="#001"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"

        />

    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/tx_item_room_occupancy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="21232"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tx_item_room_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tx_item_room_occupied"

        />

    <TextView
        android:textSize="18sp"
        android:id="@+id/tx_item_room_occupied"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tx_item_room_occupancy"
        app:layout_constraintTop_toBottomOf="@id/tx_item_room_number"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Is Occupied"

        />

</androidx.constraintlayout.widget.ConstraintLayout>